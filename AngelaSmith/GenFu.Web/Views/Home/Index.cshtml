    <div class="col-lg-12 col-md-12 col-sm-12">
        <h2>Try GenFu Out</h2>
        <p><i>Working on this part...stay tuned.</i></p>
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <div class="col-lg-9 col-md-9 col-sm-9">
                    <textarea id="Source" name="Source" class="form-control" rows="12">

    public class Person
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public int Age { get; set; }
        public string EmailAddress { get; set; }
    }

                    </textarea>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <button class="btn btn-success btn-lg" type="submit"><span class="glyphicon glyphicon-play"></span> Generate test data</button>
                </div>
            </div>

            
        </form>
    </div>
</div>

